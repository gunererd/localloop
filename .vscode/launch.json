{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Users Service",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/services/users/main.go",
            "env": {
                "PORT": "8080",
                "JWT_SECRET": "your-default-secret-key",
                "JWT_EXPIRATION_MINUTES": "1440",
                "SALT_LENGTH": "25"
            }
        },
        {
            "name": "Launch Web Service",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/services/web/main.go",
            "env": {
                "PORT": "3000",
                "USER_SERVICE_URL": "http://localhost:8080"
            }
        }
    ],
    "compounds": [
        {
            "name": "Debug All Services",
            "configurations": ["Launch Users Service", "Launch Web Service"]
        }
    ]
}
